{
  "name": "fuma-content",
  "version": "0.0.0",
  "description": "Write content for web apps",
  "keywords": [
    "Content",
    "Docs"
  ],
  "repository": "github:fuma-nama/fuma-content",
  "license": "MIT",
  "type": "module",
  "bin": "./dist/cli/index.js",
  "author": "Fuma Nama",
  "files": [
    "dist/*"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./internal": {
      "import": "./dist/internal.js",
      "types": "./dist/internal.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "internal": [
        "./dist/internal.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint ."
  },
  "dependencies": {
    "@mdx-js/mdx": "^3.0.0",
    "chokidar": "^3.5.3",
    "clipanion": "4.0.0-rc.3",
    "cross-spawn": "^7.0.3",
    "estree-util-value-to-estree": "^3.0.1",
    "fast-glob": "^3.3.2",
    "gray-matter": "^4.0.3",
    "micromatch": "^4.0.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.6",
    "@types/mdast": "^4.0.3",
    "@types/mdx": "^2.0.11",
    "@types/micromatch": "^4.0.6",
    "eslint-config": "workspace:*",
    "typescript": "^5.3.3",
    "typescript-config": "workspace:*",
    "unified": "^11.0.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
