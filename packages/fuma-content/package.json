{
  "name": "fuma-content",
  "version": "1.0.2",
  "description": "The content processing layer for your app.",
  "keywords": [
    "Docs",
    "Contentlayer"
  ],
  "repository": "github:fuma-nama/fuma-content",
  "license": "MIT",
  "author": "Fuma Nama",
  "homepage": "https://fuma-content.vercel.app",
  "type": "module",
  "exports": {
    "./config": {
      "import": "./dist/config/index.js",
      "types": "./dist/config/index.d.ts"
    },
    "./next": {
      "import": "./dist/next/index.js",
      "types": "./dist/next/index.d.ts",
      "require": "./dist/next/index.cjs"
    },
    "./vite": {
      "import": "./dist/vite/index.js",
      "types": "./dist/vite/index.d.ts"
    },
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./collections": {
      "import": "./dist/collections/index.js",
      "types": "./dist/collections/index.d.ts"
    },
    "./collections/*": {
      "import": "./dist/collections/*.js",
      "types": "./dist/collections/*.d.ts",
      "default": "./dist/collections/*.js"
    },
    "./node/loader": {
      "import": "./dist/node/loader.js",
      "types": "./dist/node/loader.d.ts"
    },
    "./bun": {
      "import": "./dist/bun/index.js",
      "types": "./dist/bun/index.d.ts"
    },
    "./plugins/with-loader": {
      "import": "./dist/plugins/with-loader/index.js",
      "types": "./dist/plugins/with-loader/index.d.ts"
    },
    "./plugins/*": {
      "import": "./dist/plugins/*.js",
      "types": "./dist/plugins/*.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": "./dist/bin.js",
  "files": [
    "dist/*",
    "loader-mdx.cjs",
    "loader-meta.cjs"
  ],
  "scripts": {
    "build": "tsdown",
    "clean": "rimraf dist",
    "dev": "tsdown --watch",
    "types:check": "tsc --noEmit"
  },
  "dependencies": {
    "@mdx-js/mdx": "^3.1.1",
    "@standard-schema/spec": "^1.1.0",
    "chokidar": "^5.0.0",
    "esbuild": "^0.27.2",
    "estree-util-value-to-estree": "^3.5.0",
    "js-yaml": "^4.1.1",
    "mdast-util-to-markdown": "^2.1.2",
    "picocolors": "^1.1.1",
    "picomatch": "^4.0.3",
    "remark-mdx": "^3.1.1",
    "tinyexec": "^1.0.2",
    "tinyglobby": "^0.2.15",
    "unified": "^11.0.5",
    "unist-util-remove-position": "^5.0.0",
    "unist-util-visit": "^5.0.0",
    "vfile": "^6.0.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/js-yaml": "^4.0.9",
    "@types/mdast": "^4.0.4",
    "@types/mdx": "^2.0.13",
    "@types/node": "^24.10.4",
    "@types/picomatch": "^4.0.2",
    "@types/react": "^19.2.7",
    "fumadocs-core": "^16.3.2",
    "mdast-util-directive": "^3.1.0",
    "mdast-util-mdx-jsx": "^3.2.0",
    "next": "16.1.0",
    "react": "^19.2.3",
    "remark": "^15.0.1",
    "remark-directive": "^4.0.0",
    "remark-stringify": "^11.0.0",
    "rollup": "^4.54.0",
    "tsdown": "^0.18.2",
    "typescript": "^5.9.3",
    "typescript-config": "workspace:*",
    "vite": "^7.3.0",
    "webpack": "^5.104.1"
  },
  "peerDependencies": {
    "next": "^15.3.0 || ^16.0.0",
    "react": "*",
    "vite": "6.x.x || 7.x.x"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "next": {
      "optional": true
    },
    "vite": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
