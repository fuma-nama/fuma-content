{
  "name": "fuma-content",
  "version": "1.1.4",
  "description": "The content processing layer for your app.",
  "keywords": [
    "Content",
    "Docs"
  ],
  "homepage": "https://fuma-content.vercel.app",
  "license": "MIT",
  "author": "Fuma Nama",
  "repository": "github:fuma-nama/fuma-content",
  "bin": "./dist/bin.js",
  "files": [
    "dist/*"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./config": {
      "types": "./dist/config/index.d.ts",
      "import": "./dist/config/index.js"
    },
    "./dynamic": {
      "types": "./dist/dynamic.d.ts",
      "import": "./dist/dynamic.js"
    },
    "./next": {
      "types": "./dist/next/index.d.ts",
      "import": "./dist/next/index.js"
    },
    "./vite": {
      "types": "./dist/vite/index.d.ts",
      "import": "./dist/vite/index.js"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./collections": {
      "types": "./dist/collections/index.d.ts",
      "import": "./dist/collections/index.js"
    },
    "./collections/mdx/react": {
      "types": "./dist/collections/mdx/react.d.ts",
      "import": "./dist/collections/mdx/react.js"
    },
    "./collections/*": {
      "types": "./dist/collections/*.d.ts",
      "import": "./dist/collections/*.js",
      "default": "./dist/collections/*.js"
    },
    "./node": {
      "types": "./dist/node/index.d.ts",
      "import": "./dist/node/index.js"
    },
    "./bun": {
      "types": "./dist/bun/index.d.ts",
      "import": "./dist/bun/index.js"
    },
    "./plugins/loader": {
      "types": "./dist/plugins/loader/index.d.ts",
      "import": "./dist/plugins/loader/index.js"
    },
    "./plugins/*": {
      "types": "./dist/plugins/*.d.ts",
      "import": "./dist/plugins/*.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "clean": "rimraf dist",
    "dev": "tsdown --watch",
    "types:check": "tsc --noEmit"
  },
  "dependencies": {
    "@mdx-js/mdx": "^3.1.1",
    "@standard-schema/spec": "^1.1.0",
    "chokidar": "^5.0.0",
    "esbuild": "^0.27.3",
    "estree-util-value-to-estree": "^3.5.0",
    "github-slugger": "^2.0.0",
    "js-yaml": "^4.1.1",
    "mdast-util-mdx": "^3.0.0",
    "mdast-util-to-markdown": "^2.1.2",
    "picocolors": "^1.1.1",
    "picomatch": "^4.0.3",
    "tinyexec": "^1.0.2",
    "tinyglobby": "^0.2.15",
    "unified": "^11.0.5",
    "unist-util-remove-position": "^5.0.0",
    "unist-util-visit": "^5.1.0",
    "vfile": "^6.0.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "@types/js-yaml": "^4.0.9",
    "@types/mdast": "^4.0.4",
    "@types/mdx": "^2.0.13",
    "@types/node": "^25.2.3",
    "@types/picomatch": "^4.0.2",
    "@types/react": "^19.2.14",
    "mdast-util-directive": "^3.1.0",
    "mdast-util-mdx-jsx": "^3.2.0",
    "next": "16.1.6",
    "react": "^19.2.4",
    "remark": "^15.0.1",
    "remark-directive": "^4.0.0",
    "remark-mdx": "^3.1.1",
    "remark-stringify": "^11.0.0",
    "rollup": "^4.57.1",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3",
    "typescript-config": "workspace:*",
    "unplugin-vue": "^7.1.1",
    "vite": "^7.3.1",
    "vue": "^3.5.28",
    "vue-tsc": "^3.2.4",
    "webpack": "^5.105.1"
  },
  "peerDependencies": {
    "@types/mdast": "*",
    "@types/mdx": "*",
    "next": "^15.3.0 || ^16.0.0",
    "react": "*",
    "vite": "6.x.x || 7.x.x",
    "vue": "3.x.x"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    },
    "@types/mdx": {
      "optional": true
    },
    "@types/mdast": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "next": {
      "optional": true
    },
    "vite": {
      "optional": true
    }
  }
}
